<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.view.ForgetPassword">

    <stylesheets>
        <URL value="@../CSS/RegisterMenu.css" />
    </stylesheets>
    <children>
        <Label alignment="CENTER" layoutX="357.0" layoutY="181.0" prefHeight="31.0" prefWidth="566.0" text="answer these question and then set a new password" />
        <TextField fx:id="color" alignment="CENTER" layoutX="440.0" layoutY="232.0" prefHeight="26.0" prefWidth="387.0" promptText="your favorite color?" />
        <TextField fx:id="month" alignment="CENTER" layoutX="440.0" layoutY="276.0" prefHeight="26.0" prefWidth="387.0" promptText="your favorite month?" />
        <TextField fx:id="food" alignment="CENTER" layoutX="440.0" layoutY="330.0" prefHeight="26.0" prefWidth="387.0" promptText="your favorite food?" />
        <Button layoutX="519.0" layoutY="498.0" mnemonicParsing="false" onMouseClicked="#confirm" prefHeight="50.0" prefWidth="196.0" text="confirm" />
        <PasswordField fx:id="newPassword" layoutX="617.0" layoutY="380.0" prefHeight="26.0" prefWidth="210.0" promptText="new password" />
        <PasswordField fx:id="newPasswordAgain" layoutX="617.0" layoutY="439.0" prefHeight="26.0" prefWidth="210.0" promptText="newPasswordAgain" />
        <Button layoutX="440.0" layoutY="380.0" mnemonicParsing="false" onMouseClicked="#generateRandomPassword" prefHeight="89.0" prefWidth="160.0" text="Radom pass" />
    </children>
</AnchorPane>
