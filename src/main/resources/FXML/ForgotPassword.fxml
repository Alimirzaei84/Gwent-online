<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: blue;"
            xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="view.ForgetPassword">
    <Label alignment="CENTER" layoutX="74.0" layoutY="30.0" prefHeight="18.0" prefWidth="396.0"
           style="-fx-background-color: black;" text="answer these question and then set a new password"
           textFill="#eabb30"/>
    <TextField fx:id="color" alignment="CENTER" layoutX="77.0" layoutY="69.0" prefHeight="26.0" prefWidth="387.0"
               promptText="your favorite color?" style="-fx-background-color: yellow;"/>
    <TextField fx:id="month" alignment="CENTER" layoutX="77.0" layoutY="110.0" prefHeight="26.0" prefWidth="387.0"
               promptText="your favorite month?" style="-fx-background-color: yellow;"/>
    <TextField fx:id="food" alignment="CENTER" layoutX="77.0" layoutY="151.0" prefHeight="26.0" prefWidth="387.0"
               promptText="your favorite food?" style="-fx-background-color: yellow;"/>
    <Button layoutX="196.0" layoutY="319.0" mnemonicParsing="false" onMouseClicked="#confirm" prefHeight="50.0"
            prefWidth="196.0" style="-fx-background-color: purple;" text="confirm" textFill="#cc499c"/>
    <PasswordField fx:id="newPassword" layoutX="321.0" layoutY="200.0" prefHeight="26.0" prefWidth="210.0"
                   promptText="new password" style="-fx-background-color: brown;"/>
    <PasswordField fx:id="newPasswordAgain" layoutX="321.0" layoutY="244.0" prefHeight="26.0" prefWidth="210.0"
                   promptText="newPasswordAgain" style="-fx-background-color: brown;"/>
    <Button layoutX="144.0" layoutY="213.0" mnemonicParsing="false" onMouseClicked="#generateRandomPassword"
            prefHeight="41.0" prefWidth="156.0" style="-fx-background-color: silver;" text="random password --&gt;&gt;"
            textFill="#3e7932"/>
</AnchorPane>
