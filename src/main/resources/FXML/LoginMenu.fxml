<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: brown;"
            xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="view.LoginMenu">
   <Button layoutX="201.0" layoutY="352.0" mnemonicParsing="false" onMouseClicked="#goToRegisterMenu" prefHeight="26.0"
           prefWidth="155.0" style="-fx-background-color: red;" text="back to register menu" textFill="#402525"/>
   <Label alignment="CENTER" layoutX="14.0" layoutY="14.0" prefHeight="18.0" prefWidth="84.0"
          style="-fx-background-color: green;" text="Login menu"/>
   <TextField fx:id="username" alignment="CENTER" layoutX="153.0" layoutY="10.0" prefHeight="38.0" prefWidth="250.0"
              promptText="Enter your username" style="-fx-background-color: orange;"/>
   <PasswordField fx:id="password" alignment="CENTER" layoutX="153.0" layoutY="64.0" prefHeight="47.0" prefWidth="250.0"
                  promptText="Enter your password" style="-fx-background-color: orange;"/>
   <Button alignment="CENTER" layoutX="153.0" layoutY="124.0" mnemonicParsing="false" onMouseClicked="#login"
           prefHeight="76.0" prefWidth="250.0" style="-fx-background-color: green;" text="login"/>
   <Button alignment="CENTER" layoutX="216.0" layoutY="247.0" mnemonicParsing="false" onMouseClicked="#forgetPassword"
           prefHeight="47.0" prefWidth="148.0" text="forget your password?"/>
</AnchorPane>